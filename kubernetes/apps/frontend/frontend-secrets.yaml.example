# =============================================================================
# Secret Frontend Next.js Credentials - EXEMPLE
# =============================================================================
# Commande pour creer le SealedSecret :
#   kubectl create secret generic frontend-secrets \
#     --namespace production \
#     --from-literal=NEXTAUTH_SECRET='SuperSecretNextAuth256BitsMin!2024' \
#     --dry-run=client -o yaml | \
#   kubeseal --format yaml \
#     > kubernetes/secrets/frontend-sealed.yaml
# =============================================================================
apiVersion: v1
kind: Secret
metadata:
  name: frontend-secrets
  namespace: production
  labels:
    app: frontend
    app.kubernetes.io/name: frontend
    app.kubernetes.io/component: credentials
type: Opaque
stringData:
  # Cle secrete NextAuth pour chiffrer les sessions (min 256 bits)
  NEXTAUTH_SECRET: "CHANGE_ME_nextauth_secret_min_32_chars"
