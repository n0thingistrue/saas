# =============================================================================
# Secret AlertManager Credentials - EXEMPLE
# =============================================================================
# Commande pour creer le SealedSecret :
#   kubectl create secret generic alertmanager-secrets \
#     --namespace monitoring \
#     --from-literal=SLACK_WEBHOOK_URL='https://hooks.slack.com/services/XXX/YYY/ZZZ' \
#     --from-literal=PAGERDUTY_API_KEY='CHANGE_ME_pagerduty_key' \
#     --from-literal=EMAIL_AUTH_PASSWORD='CHANGE_ME_email_password' \
#     --dry-run=client -o yaml | \
#   kubeseal --format yaml \
#     > kubernetes/secrets/alertmanager-sealed.yaml
# =============================================================================
apiVersion: v1
kind: Secret
metadata:
  name: alertmanager-secrets
  namespace: monitoring
  labels:
    app: alertmanager
    app.kubernetes.io/name: alertmanager
    app.kubernetes.io/component: credentials
type: Opaque
stringData:
  SLACK_WEBHOOK_URL: "https://hooks.slack.com/services/CHANGE_ME"
  PAGERDUTY_API_KEY: "CHANGE_ME_pagerduty_api_key"
  EMAIL_AUTH_PASSWORD: "CHANGE_ME_email_auth_password"
